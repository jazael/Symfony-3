{% extends "BlogBundle::layout.html.twig" %}

{% block content %}
    <div class="col-md-2"></div>
    <div class="col-md-8 col-lg-8 col-sm-8">
    <h2>Todas las categorias</h2>
    <hr/>
    <a href="{{ path("blog_add_category") }}" class="btn btn-success">Añadir Categoría</a>
    <hr/>
    {% for message in app.session.flashbag().get('status') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
         <table class="table table-bordered">
             <tr>
                 <th>Nombre</th>
                 <th>Descripción</th>
                 <th>Editar</th>
                 <th>Eliminar</th>
             </tr>
             {% for category in categories %}
                 <tr>
                     <td>{{ category.name }}</td>
                     <td>{{ category.description }}</td>
                     <td>
                         <a href="{{ path("blog_edit_category",{"id":category.id}) }}" class="btn btn-info">Editar</a>
                     </td>
                     <td>
                         {% if category.entry|length == 0 %}
                         <a href="{{ path("blog_delete_category",{"id":category.id}) }}" class="btn btn-danger">Eliminar</a>
                         {% else %}
                             <strong>Categoría en uso</strong>
                         {% endif %}
                     </td>
                 </tr>
             {% endfor %}
         </table>
    </div>
    <div class="col-md-2"></div>
{% endblock %}